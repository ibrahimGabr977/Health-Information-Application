<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide70h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide80h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide92v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />

    <ImageView
        android:id="@+id/a2f1pImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guide80h"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide92v"
        android:background="@drawable/a2f1r_bg_imagesframe"
        android:scaleType="fitXY"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a2f1pTextsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/a2f1r_bg_textsframe"
        app:layout_constraintTop_toBottomOf="@id/guide70h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide92v"

        >


        <TextView
            android:id="@+id/a2f1pPost_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:gravity="center_vertical"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>