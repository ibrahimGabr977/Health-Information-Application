<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/a2_bg_popup"
    >
    <Button
        android:id="@+id/cancel_RateUs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/popup_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.98"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        />
    <ImageView
        android:id="@+id/rateUsImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0.2"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        />



            <TextView
                android:id="@+id/rateUsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rateUsBtn"
                app:layout_constraintTop_toBottomOf="@id/rateUsImage"
                android:gravity="center_horizontal"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="7dp"
                />
    <TextView
        android:id="@+id/rateUsContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/closeApp"
        app:layout_constraintTop_toBottomOf="@id/rateUsTitle"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"
        />


    <TextView
        android:id="@+id/closeApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#D82B2B"
        app:layout_constraintBottom_toBottomOf="@id/rateUsBtn"
        app:layout_constraintTop_toBottomOf="@id/rateUsContent"
        android:text="Close App"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintHeight_percent="0.08"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        />

    <TextView
        android:id="@+id/rateUsBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#022765"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="REVIEW US"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toBottomOf="@id/closeApp" />
</androidx.constraintlayout.widget.ConstraintLayout>